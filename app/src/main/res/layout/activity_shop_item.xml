    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".ShopItem">

  <LinearLayout
      android:id="@+id/linearLayout"
      android:background="@color/maintoolbaar"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal">

    <ImageView
        android:id="@+id/btn_backitem"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_gravity="center"
        android:src="@drawable/white_back_arro" />

    <TextView
        android:id="@+id/toolbarname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:fontFamily="sans-serif"
        android:background="@color/fui_transparent"
        android:minHeight="?attr/actionBarSize"
        android:text="Fetilizer"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:theme="?attr/actionBarTheme" />


  </LinearLayout>

  <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent">

    <ProgressBar
        android:id="@+id/progressBar33"
        style="?android:attr/progressBarStyle"
        android:layout_width="131dp"
        android:layout_height="135dp"
        android:layout_gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/recitem"
        app:layout_constraintVertical_bias="0.425" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recitem"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />
  </androidx.constraintlayout.widget.ConstraintLayout>





